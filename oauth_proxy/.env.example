# Server Configuration
PORT=8080
USE_LOCAL_HTTPS=false
LOG_LEVEL=info

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:3000,https://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
