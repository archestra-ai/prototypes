{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Archestra AI",
  "version": "0.0.7",
  "identifier": "com.archestra.ai",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "width": 1200,
        "height": 800,
        "resizable": true,
        "title": "",
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 16,
          "y": 17
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/ollama-v0.9.6"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "archestra-ai"
        ]
      }
    }
  }
}
